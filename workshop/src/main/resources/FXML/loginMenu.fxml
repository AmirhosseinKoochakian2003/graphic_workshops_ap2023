<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.LoginMenuController"
            stylesheets="@../CSS/style1.css"
            styleClass="BackGround"
            prefHeight="400.0" prefWidth="600.0">

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label text="welcome !" id="label"/>
            <TextField promptText="username" maxWidth="300" fx:id="username" styleClass="text-input"/>
            <PasswordField promptText="password" maxWidth="300" fx:id="password" styleClass="text-input2"/>
            <HBox alignment="CENTER" spacing="20">
                <Button text="submit" onMouseClicked="#submit"/>
                <Button text="reset" onMouseClicked="#reset"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
